<Window x:Class="QuizzAdventureApp.GameFailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizzAdventureApp"
        Background="Black"
        mc:Ignorable="d"
        Title="GameFailWindow" Height="400" Width="300" MinHeight="400" MinWidth="300">
    <StackPanel HorizontalAlignment="Center">
        <Label Content="YOU LOST"
               Foreground="White"
               FontSize="30"
               HorizontalAlignment="Center"
               Margin=" 20"
               FontStyle="Italic" />
        <Label Content="Your Score: 0"
               Margin=" 20"
               Foreground="White"
               FontSize="30" />
        <Button x:Name="highscorebtn" Content="Highscores" 
                FontSize="15"
                FontWeight="Bold"
                Margin="15,60,15,15"
                Background="AliceBlue"/>
        <Button x:Name="mainBtn" Content="Main Menu" 
                Click="mainBtn_Click"
                Margin="10"
                FontSize="15"
                FontWeight="Bold"
                Background="AliceBlue"/>

    </StackPanel>
</Window>
