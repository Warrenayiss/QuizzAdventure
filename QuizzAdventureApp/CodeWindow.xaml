<Window x:Class="QuizzAdventureApp.CodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizzAdventureApp"
        mc:Ignorable="d"
        Background="Black"
        Title="CodeWindow" Height="200 " Width="300">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Content="Type the admin code" FontSize="20" Foreground="red" FontWeight="Bold"/>
        <TextBox x:Name="codeTxtB" Margin="20" Background="Wheat" />
        <Button x:Name="Go" Content="GO" Background="LawnGreen" Click="Go_Click" Margin="30"/>
    </StackPanel>
</Window>
