<Window x:Class="QuizzAdventureApp.Windows.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizzAdventureApp.Windows"
        mc:Ignorable="d"
        Title="HomeWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="QuizzAdventure" />
        <Button x:Name="playBtn"
                Content="Play" />
        <Button x:Name="highscoreBtn"
                Content="Hightscore" />
        <Button x:Name="exitBtn"
                Content="Quit" />
    </StackPanel>
</Window>
